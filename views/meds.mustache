<html>
    <head>
         <link rel="stylesheet" href="meds-style.css">
    </head>
    <body>
   
        <h1>Currently available medicine shows here.<h1>
    
        <hr>
            <table id="meds-table-container">

             <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Count</th>
                <th></th>
                <th></th>
            </thead>
            {{#rows}}
            <tbody> 
                <tr>
                    <td>{{id}}</td>
                    <td id="med-name">{{name}}</td>
                    <td>{{count}}</td>
            
                    <td>
                        <form action="/meds/delete/{{id}}" method="post">
                            <button type="submit">delete</button>
                        </form>
                    </td>

                    <td>
                        <a href="/meds/edit/{{id}}">edit</a>
                    </td>
                </tr>
            </tbody>
            {{/rows}}
            </table>
        <hr>
    </body>
</html>